<%- include('./partials/header.ejs') %>
    <div class="logincontainer w-full h-[80%] flex items-center justify-center">
        <div class="loginpanel">
            <h3 class="text-2xl mb-3 text-red-500">Passcode Needed.</h3>
            <form autocomplete="off" method="post" action="/profile/hisab/verify/<%= hisabId %>"
                class="flex flex-col gap-2 items-start" method="post">
                <input class="block px-3 py-2 border border-black/60 rounded-md" type="password" placeholder="passcode"
                    name="passcode">
                <input class="block px-4 py-2 bg-blue-500 rounded-md text-white" type="submit" value="View Hisab">
            </form>
        </div>
    </div>

    <script>
        document.querySelector(".logout-button").classList.add("hidden")
        document.querySelector(".create-new-hisab").classList.add("hidden")
    </script>
    <%- include('./partials/footer.ejs') %>